extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#address.form-control(type='text' placeholder='First name' name='first_name' required='true' value=(undefined===address ? '' : address.first_name) )
      label(for='last_name') Last Name:
      input#address.form-control(type='text' placeholder='Last name' name='last_name' required='true' value=(undefined===address ? '' : address.last_name))
    div.form-group
      label(for='address') Full Address:
      input#address.form-control(type='text' placeholder='Full address' name='address' required='true' value=(undefined===address ? '' : address.address) )
    button.btn.btn-primary(type='submit') Update
  if errors 
    ul
      for error in errors
        li!= error.msg